# Mount ramfs in /tmp
mkdir /tmp
mount -t tmpfs tmpfs /tmp

# Create an overlayfs over /etc
# dropbear uses /etc to create keys
mkdir -p /tmp/etc/work
mkdir -p /tmp/etc/upper

mount -t overlay \
      -o lowerdir=/etc,upperdir=/tmp/etc/upper,workdir=/tmp/etc/work \
       overlay /etc

dropbear -RBE&
